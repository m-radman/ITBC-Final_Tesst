<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="ITBC_project">
    <test name="SeleniumTrainingForm">
        <classes>
            <class name="tests.SeleniumTrainingTests">
                <methods>
                    <include name="verifyUserCanEnrollForTraining"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="BookStoreTests">
        <classes>
            <class name="tests.BookStoreTests">
                <methods>
                    <include name="verifyUserCanLogIn"/>
                    <include name="verifyUserCanSeeBookInfo"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="ElementsTests">
        <classes>
            <class name="tests.ElementsTests">
                <methods>
                    <include name="verifyDoubleClickBtn"/>
                    <include name="verifyRightClickBtn"/>
                    <include name="verifyDynamicClick"/>
                    <include name="verifyRadioButtonsWorkCorrectly"/>
                    <include name="verifyNoBtnIsDisabled"/>
                    <include name="verifyHomeCheckboxIsChecked"/>
                    <include name="verifyAllNodesAreChecked"/>
                    <include name="verifyNewTabIsOpened"/>
                    <include name="verifyLinkIsBroken"/>
                    <include name="verifyImageIsBroken"/>
                    <include name="verifyUploadWorks"/>
                    <include name="verifyDownloadWorks"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="InteractionsTests">
        <classes>
            <class name="tests.InteractionsTests">
                <methods>
                    <include name="verifyDragAndDropWorks"/>
                    <include name="verifyRevertableElement"/>
                    <include name="verifyResizableElement"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>